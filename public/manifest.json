{
  "manifest_version": 3,
  "name": "Environments configure",
  "version": "0.2.1",
  "description": "Configure your enviroments, load a new window with the specified tabs of your environment. Also clear all tabs and windows and load only a windows with the tabs of your environment",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "24": "icon24.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "open_work_environment": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1",
        "windows": "Alt+Shift+1"
      },
      "description": "Abre las páginas configuradas en una nueva ventana"
    },
    "reset_work_environment": {
      "suggested_key": {
        "default": "Ctrl+Shift+0",
        "mac": "Command+Shift+0",
        "windows": "Alt+Shift+0"
      },
      "description": "Cierra todas las pestañas y abre una nueva ventana con las páginas configuradas"
    }
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "popup.html",
        "options.html",
        "popup.css",
        "options.css",
        "assets/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}